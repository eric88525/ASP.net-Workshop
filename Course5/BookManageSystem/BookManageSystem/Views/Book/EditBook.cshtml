    $(document).ready(function () {


        $("#btnDelete").click(function (e) {
            if (confirm("是否刪除?") == true) {
                console.log($("#bookId").val());
                e.preventDefault();
                $.ajax({
                    type: "POST",
                    url: "/Book/DeleteBook",
                    data: "bookId=" + $("#bookId").val(),
                    dataType: "json",
                    success: function (response) {
                        alert("成功");
                        window.location.href = "/Book/SearchBook";
                    }, error: function (error) {
                        alert("此書無法刪除");
                    }
                });
            } else {
