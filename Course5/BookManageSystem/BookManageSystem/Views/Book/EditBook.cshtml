
@using System.Web.UI.WebControls
@model BookMamageSystem.Models.Book

@{
    ViewBag.Title = "EditBook";
    ViewBag.edit = @TempData["edit"];
}

@if (TempData["edit"] == null)
{
    <h2>檢視書籍資訊</h2>
}
else
{
    <h2>編輯書籍資訊</h2>
}



<form id="editForm"method="post" action="/Book/EditBook">
    <input hidden="hidden" id="bookId" name="BookId" value=@Model.BookId />
    <div class="form-horizontal">
        <hr />
        <div class="form-group">



            <div class="form-group">
                <label class="control-label col-md-2 ">書名</label>

                <div class="col-md-10">
                    <input id="BookName" name="BookName" value=@Model.BookName class="form-control InputItem" required/>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2 ">作者</label>

                <div class="col-md-10">
                    <input id="BookAuthor" name="BookAuthor" class="form-control InputItem" value=@Model.BookAuthor required>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2 ">出版商</label>

                <div class="col-md-10">
                    <input id="BookPublisher" name="BookPublisher" value=@Model.BookPublisher class="form-control InputItem" required/>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2 ">內容簡介</label>

                <div class="col-md-10">
                    <textarea id="BookNote" name="BookNote" value=@Model.BookNote class="form-control InputItem" required>@Model.BookNote</textarea>
                </div>
            </div>



            <div class="form-group">
                <label class="control-label col-md-2 ">購書日期</label>
                <div class="col-md-10">

                    <input id="bought_datepicker" name="BookBoughtDate" title="datepicker" value=@Model.BookBoughtDate class="form-control" required/>
                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-md-2 ">圖書類別</label>
                <div class="col-md-10">
                    <select id="BookClass" name="BookClassId" value=@Model.BookClassId required></select>
                </div>
            </div>

            <div class="form-group">

                <label class="control-label col-md-2 ">借閱狀態</label>
                <div class="col-md-10">
                    <select id="BookStatus" name="BookStatus" value=@Model.BookStatus required></select>
                </div>
            </div>



            <div class="form-group">
                <label class="control-label col-md-2 ">借閱者</label>
                <div class="col-md-10">
                    <select id="KeeperFullName" name="BookKeeperId" value=@Model.BookKeeperId></select>
                </div>
            </div>





            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @if (TempData["edit"] != null)
                    {
                        <input type="submit" value="儲存" class="btn btn-default" />
                        <a id="btnDelete" class="btn btn-default"> 刪除</a>
                        <a href="/Book/SearchBook" class="btn btn-default"> 返回搜尋</a>
                    }
                    else
                    {
                        <a href="/Book/SearchBook" class="btn btn-default"> 返回搜尋</a>
                    }




                </div>
            </div>
        </div>
    </div>
</form>

@if (TempData["message"] != null)
{
    <script type="text/javascript">
        var message = @Html.Raw(Json.Encode(TempData["message"]));
        alert(message);
    </script>
}



